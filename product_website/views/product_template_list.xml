<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<template id="product_detail_list">
		<t t-call="website.layout">
			<t t-set="title">Product List</t>
			<div class="oe_structure my-flex flex-container-list">
				<t t-foreach="product_list" t-as="pd">
					<div class="my-flex flex-container ">
						<a href="/product/info">
							<div>
								<span class="my-flex product_image_wrapper" t-field="pd.image_1920" t-options='{"widget":"image"}'/>
							</div>
						</a>

						<div>
							Name:
							<a t-attf-href="/product/info/#{pd.id}">
								<t t-esc="pd.name"/>
							</a>
							<br/>
							Quantity On Hand:
							<t t-esc="pd.qty_available"/>
						</div>
					</div>
				</t>
			</div>
		</t>
	</template>
</odoo>